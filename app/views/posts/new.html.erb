<h2>New Post</h2>
<hr>
<style type="text/css">
	.top-buffer { margin-left:500px; }
</style>

<%= form_for @post, html: { multipart: true } do |f| %>
<hr>
	<%= f.label :image %>
	<%= f.file_field :image, class: "row top-buffer" %>
<hr>
	<%=f.label :description %>
	<%=f.text_area :description %>
	<hr>
	<%= f.submit %>

<% end %>
